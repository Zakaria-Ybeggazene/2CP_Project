<Window x:Class="Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login" Height="554" Width="1080" ResizeMode="noResize">
    <Grid>
        <Image Stretch="Fill"  Name="Image1" VerticalAlignment="Top" Source="/Projet2CP;component/Images/Login%20Page.png" />
        <Label Content="User " Height="60" HorizontalAlignment="Right" Margin="0,121,238,0" Name="Label1" VerticalAlignment="Top" Width="100" Foreground="#FF123456" FontSize="36" FontFamily="Montserrat" FontWeight="SemiBold" HorizontalContentAlignment="Center" />
        <Label Content="Login" Height="60" HorizontalAlignment="Right" Margin="0,121,137,0" Name="Label2" VerticalAlignment="Top" FontSize="36" FontFamily="Montserrat" Width="114" Foreground="#FF123456" FontWeight="Light" HorizontalContentAlignment="Center" />
        <Grid  HorizontalAlignment="right" VerticalAlignment="top"  Height="40" Background="White" Margin="0,205,93,0" Width="280" >
            <Label FontFamily="Montserrat" HorizontalAlignment="right" BorderThickness="0" VerticalAlignment="top" Name="adminPasswordHint" Foreground="#123456" Opacity="0.5" FontSize="18" Width="261" Height="40" VerticalContentAlignment="Center" Background="#00000000">User Password</Label>
            <PasswordBox HorizontalAlignment="right" BorderThickness="0" VerticalAlignment="top" Background="Transparent" PasswordChanged="adminPassword_PasswordChanged" x:Name="adminPassword" FontFamily="Helvetica" FontWeight="Light" FontSize="20" FontStyle="Normal" Width="261" Height="40" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" />
            <Border BorderBrush="#FF123456" BorderThickness="1" Height="1" HorizontalAlignment="Right" Margin="0,39,8,0" Name="Border1" VerticalAlignment="Top" Width="260" />
        </Grid>
        <Button Style="{DynamicResource RoundCorner}" Name="Login" Content="Login" Margin="0,262,158,0" Foreground="White" FontSize="28" FontFamily="Montserrat" FontWeight="Light" HorizontalAlignment="Right" Width="144" VerticalAlignment="Top" Height="40" ClickMode="Release" Cursor="Hand">

        </Button>
    </Grid>
</Window>