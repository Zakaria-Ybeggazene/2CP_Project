<UserControl x:Class="RechercheEtudiantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" >

    <UserControl.Resources>

        <ResourceDictionary Source="../Dictionary.xaml"/>

    </UserControl.Resources>

    <Grid>
        <Grid Margin="1,198,25,0"  VerticalAlignment="Top" Height="464">

            <Border CornerRadius=" 15" BorderThickness="3" Margin="0,0,0,-21">
                <Border.Effect>
                    <DropShadowEffect Color="#123456" Opacity="0.5" ShadowDepth="3" RenderingBias="Quality" />
                </Border.Effect>
                <DataGrid BorderThickness=" 0" Style="{StaticResource Mystyle}" Name="Mygrid" AutoGenerateColumns="False" Height="460" Width="1087" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" GridLinesVisibility="None" FontFamily="Montserrat" FontSize="15" ItemsSource="{Binding Path=Resultats}" IsReadOnly="True" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}">

                    <DataGrid.Columns>
                        <DataGridTextColumn  Header="Matricule" Width="100" Binding="{Binding Matricule}" FontFamily="Montserrat" />
                        <DataGridTextColumn Header="Nom" Width="140" Binding="{Binding Nom}" FontFamily="Montserrat" />
                        <DataGridTextColumn Header="Prenoms" Width="*" Binding="{Binding Prenom}" FontFamily="Montserrat" />
                        <DataGridTextColumn Header="Lieu de naissance" Width=" 180" Binding="{Binding LieuNais}" FontFamily="Montserrat" />
                        <DataGridTextColumn Header="Date de Naissance" Width=" 160" Binding="{Binding DateNais}" FontFamily="Montserrat" />
                        <DataGridTextColumn Header="Ville" Width="100" Binding="{Binding Ville}" FontFamily="Montserrat">
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Details">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Details" Command="{Binding DataContext.EtudiantTab, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding Path=.}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="30" />

                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Resources>
                        <Style TargetType = "DataGridColumnHeader">
                            <Setter Property = "Foreground" Value = "#123456" />
                            <Setter Property = "FontWeight" Value = "SemiBold"  />

                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF123456" Offset="0" />
                        <GradientStop Color="#FF1168BF" Offset="1" />
                    </LinearGradientBrush>
                </Border.BorderBrush>
            </Border>
        </Grid>

        <Image Height="30" HorizontalAlignment="Left" Margin="10,10,0,0" Name="Image1" Stretch="Fill" VerticalAlignment="Top" Width="31" Source="/Projet2CP;component/Images/Icon%20feather-filter1.png" />
        <Button Content="Filters" Height="30" HorizontalAlignment="Left" FontFamily="Montserrat"  Name="Openbutton" VerticalAlignment="Top" Background="{x:Null}" FontSize="20" Margin="46,10,0,0" Foreground="#FF123456" FontStretch="Normal" BorderBrush="{x:Null}" FontWeight="SemiBold" HorizontalContentAlignment="Left"/>

        <Grid Background="#F0F0F0" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="175" Height="35">
            <Label Background="#00000000" BorderThickness="0" Content="Matricule" FontFamily="Montserrat" FontSize="14" Foreground="#123456" Height="35" Name="MatriculeHint" Opacity="0.5" VerticalContentAlignment="Center" Width="175" />
            <TextBox Text="{Binding Path=Matricule}" Background="Transparent" BorderThickness="0" FontFamily="Montserrat" FontSize="14" FontStyle="Normal" FontWeight="Light" Foreground="#FF123456" Height="35" Name="MatriculeTB" SelectionBrush="#FF123456" TextChanged="MatriculeChanged" VerticalContentAlignment="Center" Margin="-1,0,1,0" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0" VerticalAlignment="Top" Width="175" />
        </Grid>
        <Grid  Height="35"  Margin="220,50,0,0" Background="#F0F0F0" Width="175" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Nom" FontFamily="Montserrat" BorderThickness="0" Name="NomHintfr" Foreground="#FF0D1F45" Opacity="0.5" FontSize="14" Width="175" Height="35" VerticalContentAlignment="Center" Background="{x:Null}"/>
            <TextBox Text="{Binding Path=Nom}" BorderThickness="0" Background="Transparent"  TextChanged="NomChangedfr" x:Name="NomfrTB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" Height="35" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0"  VerticalAlignment="Top" Width="175" />
        </Grid>
        <Grid Height="35" Background="#F0F0F0" Margin="430,50,0,0" Width="175" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Prenom" FontFamily="Montserrat" BorderThickness="0" Name="PrenomHintfr" Foreground="#123456" Opacity="0.5" FontSize="14" Width="175" Height="35" VerticalContentAlignment="Center" Background="#00000000"/>
            <TextBox Text="{Binding Path=Prenom}" BorderThickness="0" Background="Transparent" TextChanged="PrenomChangedfr" x:Name="PrenomfrTB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" Height="35" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0"  VerticalAlignment="Top" Width="175"></Border>
        </Grid>

        <Grid  Height="35"  Margin="640,50,0,0" Background="#F0F0F0" Width="175" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="الاسم" FontFamily="Montserrat" BorderThickness="0" Name="PrenomHintA" Foreground="#FF0D1F45" Opacity="0.5" FontSize="14" Width="175" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="{x:Null}"/>
            <TextBox Text="{Binding Path=PrenomA}" BorderThickness="0" Background="Transparent"  TextChanged="PrenomChangedA" x:Name="PrenomATB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" Height="35" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" TextAlignment="Right"/>
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0"  VerticalAlignment="Top" Width="175" />
        </Grid>

        <Grid  Height="35"  Margin="850,50,0,0" Background="#F0F0F0" Width="175" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="اللقب" FontFamily="Montserrat" BorderThickness="0" Name="NomHintA" Foreground="#FF0D1F45" Opacity="0.5" FontSize="14" Width="175" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="{x:Null}"/>
            <TextBox Text="{Binding Path=NomA}" BorderThickness="0" Background="Transparent"  TextChanged="NomChangedA" x:Name="NomATB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" Height="35" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" TextAlignment="Right" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0"  VerticalAlignment="Top" Width="175" />
        </Grid>

        <Grid  Height="35"  Margin="10,100,0,0" Background="#F0F0F0" Width="175" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Promotion" FontFamily="Montserrat" BorderThickness="0" Name="PromoHint" Foreground="#FF0D1F45" Opacity="0.5" FontSize="14" Height="35" VerticalContentAlignment="Center" Background="{x:Null}"/>
            <TextBox Text="{Binding Path=Annee}" BorderThickness="0" Background="Transparent"  TextChanged="PromoChanged" x:Name="PromoTB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" Height="35" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0"  VerticalAlignment="Top" Width="175" />
        </Grid>
        <Grid Width="175" VerticalAlignment=" Top" Background="#F0F0F0" HorizontalAlignment=" left" Margin="220,100,0,0" Height="35">
            <Label Content="Lieu de naissance" FontFamily="Montserrat" BorderThickness="0" IsHitTestVisible="False" Name="LieuNaisHint" Foreground="#123456" Opacity="0.5" FontSize="14" Width="175" VerticalContentAlignment="Center" Background="#F0F0F0" Margin="0,1"/>
            <TextBox Text="{Binding Path=LieuNais}" BorderThickness="0" Background="Transparent" TextChanged="LieuNaischanged" x:Name="LieuNaisTB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" Margin="0,0,0,1" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0" VerticalAlignment="Top" Width="175" />
        </Grid>

        <Grid Width="175" VerticalAlignment=" Top" Background="#F0F0F0" HorizontalAlignment=" left" Margin="430,100,0,0" Height="35">
            <Label Content="Wilaya de naissance" FontFamily="Montserrat" BorderThickness="0" IsHitTestVisible="False" Name="WilayaNaisHint" Foreground="#123456" Opacity="0.5" FontSize="14" Width="175" VerticalContentAlignment="Center" Background="#F0F0F0" Margin="0,1"/>
            <TextBox Text="{Binding Path=WilayaNais}" BorderThickness="0" Background="Transparent" TextChanged="WilayaNaisChanged" x:Name="WilayaNaisTB" FontFamily="Montserrat" FontWeight="Light" FontSize="14" FontStyle="Normal" VerticalContentAlignment="Center" SelectionBrush="#FF123456" Foreground="#FF123456" Margin="0,0,0,1" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0" VerticalAlignment="Top" Width="175" />
        </Grid>


        <Grid Height="35" HorizontalAlignment="Left" Margin="850,100,0,0" Name="Grid1" VerticalAlignment="Top" Width="175"  Background="#F0F0F0">
            <ComboBox Text="Sexe" SelectedItem="{Binding Path=Sexe}" Background="#F0F0F0" Height="34" BorderThickness="0"  HorizontalAlignment="Left" FontFamily="Montserrat" FontSize="14" VerticalAlignment="Top" Width="175" Name="SexeCB" IsEditable="True" VerticalContentAlignment="Center" IsTextSearchEnabled="False" Loaded="ComboBox_Loaded" IsReadOnly="True">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#F0F0F0" />
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" VerticalAlignment="Bottom" />
        </Grid>

        <Button Style="{DynamicResource RoundCorner}" Name="Filter" Content="Filter" Command="{Binding Path=RechercheCommand}" Margin="0,150,50,0" Foreground="White" FontSize="18" FontFamily="Montserrat" FontWeight="Light" VerticalAlignment="Top" Height="30" ClickMode="Release" Cursor="Hand" BorderThickness="0" ClipToBounds="True" Focusable="True" HorizontalAlignment="Right" Width="100" />
        <Border Margin="0,150,209,0"   HorizontalAlignment="Right" CornerRadius=" 15" BorderThickness="2" VerticalAlignment="Top" Height="30" Width="100">
            <Button BorderThickness="0" ClickMode="Release" ClipToBounds="True" Style="{DynamicResource Reset}" Command="{Binding Path=RechercheCommand}" Content="Reset" Cursor="Hand" Focusable="True" FontFamily="Montserrat" FontSize="18" FontWeight="Light"  Height="30" HorizontalAlignment="Center" Name="Button2" VerticalAlignment="Center" Width="100" Background="White" HorizontalContentAlignment="Center">
                <Button.Foreground>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#FF123456" Offset="0" />
                        <GradientStop Color="#FF1168BF" Offset="1" />
                        <GradientStop Color="#FE11375D" Offset="0.39" />
                    </LinearGradientBrush>
                </Button.Foreground>
            </Button>
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#FF123456" Offset="0" />
                    <GradientStop Color="#FF1168BF" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>
        <Grid Background="#F0F0F0" Height="35" HorizontalAlignment="Left" Margin="640,99,0,0" VerticalAlignment="Top" Width="175">
            <DatePicker Text="{Binding Path=DateNais}" Height="36" HorizontalAlignment="Left" Margin="0,0,0,0" Name="DatePicker1" VerticalAlignment="Center" Width="175" BorderThickness="0" Foreground="#FF123456" VerticalContentAlignment="Center" Background="{x:Null}" OpacityMask="{x:Null}" FontFamily="Montserrat" FontSize="12">
                <DatePicker.Resources>
                    <Style TargetType="{x:Type DatePicker}">
                        <Style.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush"   Value="Transparent" />
                            </Style>
                        </Style.Resources>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            <Rectangle Height="19" Margin="1,8,28,0" Name="Rectangle1" Stroke="#FFF0F0F0" VerticalAlignment="Top" StrokeThickness="2" />
            <Border BorderBrush="#FF123456" BorderThickness="2" Height="1" HorizontalAlignment="Right" Margin="0,34,0,0" VerticalAlignment="Top" Width="175" />
        </Grid>
    </Grid>
</UserControl> 
 
