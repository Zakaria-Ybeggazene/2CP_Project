<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:Projet2CP"
    Title="MainWindow" Height="650" Width="1920" ResizeMode="CanResize">
    <Window.Resources>
        <ResourceDictionary Source="../Dictionary.xaml"/>
    </Window.Resources>

    <DockPanel Background="White">
        <Grid>
            <ItemsControl Width="235"  DockPanel.Dock="Left" ItemsSource="{Binding Commands}"  Margin="-1,127,1,0" DataContext="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate >
                        <TextBlock Margin="2,6" > 
                          <StackPanel >
                            <Button  Command="{Binding Command}"  Width="230" Height="35" BorderThickness="0" FontFamily="Montserrat"  FontSize="16" Foreground="#ffffff" Background="{x:Null}"  Padding="5,1,1,1" Cursor="Hand" DataContext="{Binding}"> 
     
                                  <TextBlock Text="{Binding Path=DisplayName}"  />
                            </Button >
                             
                         </StackPanel>                                  
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
           
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF135CA7" Offset="0" />
                    <GradientStop Color="#FF123456" Offset="0.727" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <TabControl ItemsSource="{Binding Workspaces}" Name="WorkspaceList"  >
            <TabControl.ItemTemplate >
                <DataTemplate >
                    <DockPanel Width="150" Height="30">
                        <Button Command="{Binding Path=CloseCommand}" BorderThickness="0" DockPanel.Dock="Right" Width="12" Height="12" Background="{x:Null}" Cursor="Hand">
                            <Image Source="/Projet2CP;component/Images/icon.png"/>

                        </Button>
                        <TextBlock Text="{Binding Path=DisplayName}" VerticalAlignment="Center" FontFamily="Montserrat" FontSize="12" />

                    </DockPanel>
                           
                </DataTemplate>
                
            </TabControl.ItemTemplate>
        </TabControl>
    </DockPanel>
</Window>
